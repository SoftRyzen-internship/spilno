{
  "id": "contactUs",
  "title": "Розвивайте ваш бізнес разом з нами!",
  "desc": "Тут ви можете надіслати заявку щодо розробки сайту для вашого бізнесу. Так ми підтримаємо ваш бізнес, допоможемо створити нові робочі місця.",
  "form": {
    "inputs": [
      {
        "id": "i01",
        "label": "Імʼя",
        "type": "text",
        "name": "userName",
        "placeholder": "Іван Іванов"
      },
      {
        "id": "i02",
        "label": "Телефон",
        "type": "tel",
        "name": "phone",
        "placeholder": "+380988888545"
      },
      {
        "id": "i03",
        "label": "Телеграм",
        "type": "text",
        "name": "telegram",
        "placeholder": "https://t.me/ivanivanov"
      },
      {
        "id": "i04",
        "label": "Пошта",
        "type": "email",
        "name": "userEmail",
        "placeholder": "ivanovivan@gmail.com"
      }
    ],
    "select": {
      "id": "s01",
      "label": "Звідки ви про нас дізнались?",
      "name": "referralSource",
      "placeholder": "Оберіть варіант",
      "options": ["Друзі", "Лінкедін", "Телеграм", "Тікток", "Інстаграм"]
    },
    "textarea": {
      "id": "t01",
      "label": "Опишіть проєкт",
      "name": "projectDecription",
      "placeholder": "Опишіть проєкт"
    },
    "checkbox": {
      "id": "c01",
      "label": "Даю згоду на обробку персональних даних",
      "name": "agreement"
    },
    "submitBtn": { "label": "Замовити сайт" },
    "validation": {
      "userName": {
        "format": {
          "reg": "^(?![\\s-]*[\\s-])(?!.*--)(?!.*- )(?!.*'-)(?=.*[A-Za-zА-Яа-яЇїІіЄєҐґ])[A-Za-zА-Яа-яЇїІіЄєҐґ' -]+$",
          "message": "Невірно введене ім’я"
        },
        "minLength": { "value": 3, "message": "Не менше 3 символів" },
        "maxLength": { "value": 70, "message": "Не більше 70 символів" }
      },
      "socialLink": {
        "maxLength": { "value": 70, "message": "Не більше 70 символів" }
      },
      "phoneNumber": {
        "format": {
          "reg": "^\\+[0-9]+$",
          "message": "Неправильний формат. Приклад: \"+(код країни)\""
        },
        "minLength": { "value": 12, "message": "Не менше 12 символів" },
        "maxLength": { "value": 13, "message": "Не більше 13 символів" }
      },
      "question": {
        "format": {
          "reg": "^[A-Za-zА-Яа-яЇїІіЄєҐґ0-9()s',.!? \n-]+$",
          "message": "Присутні недопустимі символи"
        },
        "minLength": { "value": 3, "message": "Не менше 3 символів" },
        "maxLength": { "value": 1000, "message": "Не більше 1000 символів" }
      },
      "common": {
        "required": "Обовʼязкове поле"
      }
    }
  },
  "notifications": {
    "onSuccess": [
      "Дякуємо за заявку!",
      "Ми з тобою звʼяжемось якомога скоріше."
    ],
    "onError": ["Здається, щось пішло не так.", "Спробуй ще раз."]
  },
  "onLoadingMessage": "Відправка"
}
